<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
        android:id="@+id/ll_system_optis_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_system_optis_cache"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_system_optis_cache"
                android:layout_width="30dip"
                android:layout_height="30dip" />

            <TextView
                android:id="@+id/tv_system_optis_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缓存清理"
                android:textColor="#FF7bB226" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_system_optis_sdcar"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dg_cancel_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_system_optis_sdcar"
                android:layout_width="30dip"
                android:layout_height="30dip" />

            <TextView
                android:id="@+id/tv_system_optis_sdcar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SD卡清理" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>