<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/text_title"
        android:gravity="center"
        android:text="手机防盗" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            style="@style/text_title2"
            android:layout_weight="1"
            android:text="安全号码" />
        <TextView
            style="@style/text_title2"
            android:layout_weight="4"
            android:text="5556" />
    </LinearLayout>
<TextView 
     android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#88000000"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            style="@style/text_title2"
            android:layout_weight="1"
            android:text="防盗保护是否开启" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dip"
            android:src="@drawable/unlock" />
    </LinearLayout>

    <TextView
        android:onClick="reseting"
        android:clickable="true"
        style="@style/text_title2"
        android:background="@drawable/dg_cancel_selector"
        android:text="重新进入设置向导" />


         <TextView
            style="@style/text_title2"
            android:text="功能简介"
            android:background="#33000000"
             />
          <TextView
        style="@style/text_context"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="GPS追踪 #*location*#" />

    <TextView
        style="@style/text_context"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="播放报警音乐 #*alarm*#" />

    <TextView
        style="@style/text_context"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="远程删除数据 #*wipedata*#" />

    <TextView
        style="@style/text_context"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="远程锁屏 #*lockscreen*#" />
      
</LinearLayout>
